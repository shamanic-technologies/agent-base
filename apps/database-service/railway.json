{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/database-service/Dockerfile",
    "watchPatterns": [
      "apps/database-service/**",
      "packages/types/**",
      "packages/api-client/**",
      "packages/secret-client/**",
      "pnpm-lock.yaml",
      "package.json",
      "pnpm-workspace.yaml",
      "tsconfig.json",
      "tooling/typescript/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE"
  }
} 