{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "**"
    ],
    "nixpacks": {
      "buildCmd": "npm install --no-package-lock && npm run build",
      "installCmd": "npm install --no-package-lock"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "PORT": "8080",
    "NODE_ENV": "production",
    "MODEL_SERVICE_URL": "http://model-service.railway.internal:8080",
    "UTILITY_SERVICE_URL": "http://utility-service.railway.internal:8080",
    "KEY_SERVICE_URL": "http://key-service.railway.internal:8080",
    "LOGGING_SERVICE_URL": "http://logging-service.railway.internal:8080"
  }
} 