  {
    "id": "crisp_list_conversations_extended",
    "utilityProvider": "crisp",
    "description": "Lists conversations for a Crisp website with comprehensive filtering and pagination options.",
    "schema": {
      "type": "object",
      "properties": {
        "website_id": {
          "type": "string",
          "description": "The website identifier for your Crisp account",
          "examples": [
            "8c842203-7ed8-4e29-a608-7cf78a7d2fcc"
          ]
        },
        "page_number": {
          "type": "integer",
          "description": "Page number for conversations paging",
          "examples": [
            1
          ]
        },
        "per_page": {
          "type": "integer",
          "description": "Page size for conversations paging (between 20 and 50, defaults to 20)",
          "examples": [
            20
          ]
        },
        "search_query": {
          "type": "string",
          "description": "Search query in all conversations (text if type is text or segment, filter if type is filter)",
          "examples": [
            "customer support"
          ]
        },
        "search_type": {
          "type": "string",
          "description": "Search type (either text, segment or filter)",
          "enum": [
            "text",
            "segment",
            "filter"
          ]
        },
        "search_operator": {
          "type": "string",
          "description": "Search operator if search type is filter (or or and respectful to boolean algebra, defaults to and if not set)",
          "enum": [
            "or",
            "and"
          ]
        },
        "include_empty": {
          "type": "integer",
          "description": "Whether to include conversations without any message (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "filter_inbox_id": {
          "type": "string",
          "description": "Whether to return only conversations categorized under provided inbox identifier"
        },
        "filter_unread": {
          "type": "integer",
          "description": "Whether to return only conversations with unread messages (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "filter_resolved": {
          "type": "integer",
          "description": "Whether to return only conversations that are resolved (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "filter_not_resolved": {
          "type": "integer",
          "description": "Whether to return only conversations that are not resolved (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "filter_mention": {
          "type": "integer",
          "description": "Whether to return only conversations where user is mentioned (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "filter_assigned": {
          "type": "string",
          "description": "Whether to return only conversations that are assigned to user identifier"
        },
        "filter_unassigned": {
          "type": "integer",
          "description": "Whether to return only conversations that are not assigned to any user (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "filter_date_start": {
          "type": "string",
          "description": "When to start relative to conversation update date (date, ISO 8601, eg. 2018-03-01T17:00:00.000Z)"
        },
        "filter_date_end": {
          "type": "string",
          "description": "When to end relative to conversation update date (date, ISO 8601, eg. 2018-04-01T10:30:00.000Z)"
        },
        "order_date_created": {
          "type": "integer",
          "description": "Whether to order conversations by date created instead of default order (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "order_date_updated": {
          "type": "integer",
          "description": "Whether to order conversations by date updated instead of default order (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        },
        "order_date_waiting": {
          "type": "integer",
          "description": "Whether to order conversations by longest date waiting instead of default order, this also filters out non-waiting conversations (1 or 0, defaults to 0)",
          "enum": [
            0,
            1
          ]
        }
      }
    },
    "authMethod": "API_KEY",
    "requiredSecrets": [
      "api_identifier",
      "api_secret_key"
    ],
    "apiKeyDetails": {
      "secretName": "api_secret_key",
      "scheme": "BasicUser"
    },
    "apiDetails": {
      "baseUrl": "https://api.crisp.chat",
      "method": "GET",
      "pathTemplate": "/v1/website/{website_id}/conversations/{page_number}",
      "paramMappings": {
        "path": {
          "website_id": "website_id",
          "page_number": "page_number"
        },
        "query": {
          "per_page": "per_page",
          "search_query": "search_query",
          "search_type": "search_type",
          "search_operator": "search_operator",
          "include_empty": "include_empty",
          "filter_inbox_id": "filter_inbox_id",
          "filter_unread": "filter_unread",
          "filter_resolved": "filter_resolved",
          "filter_not_resolved": "filter_not_resolved",
          "filter_mention": "filter_mention",
          "filter_assigned": "filter_assigned",
          "filter_unassigned": "filter_unassigned",
          "filter_date_start": "filter_date_start",
          "filter_date_end": "filter_date_end",
          "order_date_created": "order_date_created",
          "order_date_updated": "order_date_updated",
          "order_date_waiting": "order_date_waiting"
        }
      },
      "staticHeaders": {
        "Content-Type": "application/json",
        "X-Crisp-Tier": "plugin"
      }
    }
  },
