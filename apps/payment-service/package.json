{
  "name": "@helloworld/payment-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"stripe listen --forward-to http://localhost:3007/payment/webhook\" \"tsx watch src/index.ts\"",
    "dev:service": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "node test-payment-service.js",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "trigger:checkout-completed": "stripe trigger checkout.session.completed --add \"checkout_session:mode=payment\" --add \"checkout_session:payment_status=paid\" --add \"checkout_session:customer=cus_PicLiMDp41NrPe\" --add \"checkout_session:metadata.purpose=add_credit\" --add \"checkout_session:metadata.userId=user_2YFJmK4vKsUNxRwqNWb9eAvQDcF\" --add \"checkout_session:metadata.creditAmount=10\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "lucide-react": "^0.510.0",
    "stripe": "^18.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.17",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
